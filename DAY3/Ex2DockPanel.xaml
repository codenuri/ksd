<Window x:Class="WPF03_LAYOUT.Ex2DockPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF03_LAYOUT"
        mc:Ignorable="d"
        Title="Ex2DockPanel" Height="300" Width="300">
    <DockPanel LastChildFill="False">
        <Button DockPanel.Dock="Top" Content="button1"/>
        <Button DockPanel.Dock="Top" Width="200" Content="button2"/>
        <Button DockPanel.Dock="Top" Width="200" HorizontalAlignment="Left" Content="button3"/>
        <Button DockPanel.Dock="Left" Content="button4"/>
        <Button DockPanel.Dock="Right" Content="button5"/>
        <Button DockPanel.Dock="Bottom" Content="button6"/>
        <Button Content="button7"/>


    </DockPanel>
</Window>
